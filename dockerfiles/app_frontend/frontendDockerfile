# Step 1: Build the React app
FROM node:18 AS builder

WORKDIR /app

# Clone repo and move to frontend
RUN git clone https://github.com/Shubham191297/Wearify.git
WORKDIR /app/Wearify/frontend/wearify

RUN npm install

# Replace API URLs
RUN sed -i 's|http://localhost:5001/|/api/|g' src/utils/backendURL.js
RUN sed -i 's|http://localhost:5001/|/api/|g' src/utils/imagePath.js

# Build the app
RUN npm run build

# Step 2: Serve build using NGINX
FROM nginx:alpine

COPY --from=builder /app/Wearify/frontend/wearify/build /usr/share/nginx/html

# Custom nginx config (React Router support)
COPY default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]